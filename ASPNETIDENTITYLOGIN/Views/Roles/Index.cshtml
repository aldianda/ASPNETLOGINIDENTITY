
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<hr />
<button class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="ClearScreen();">Create New</button>
<hr />

<table id="table" class="table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Role Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id">Id</label>
                    <input type="text" id="RoleIdText" class="form-control" placeholder="Id" />
                </div>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" id="RoleNameText" class="form-control" placeholder="Name">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Validation();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="Validation();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script>
        $(document).ready(function () {
            $("#table").DataTable({
                "ajax": {
                    "url": "/Roles/GetDataRoles",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "Name" },
                    {
                        "render": function (data, type, row, meta) {
                            return "<button class='btn btn-warning' onclick=GetById('" + row.Id + "');>edit</button> <button class='btn btn-danger' onclick=Delete('" + row.Id + "');>Delete</button>";
                        }
                    }
                ]
            });
        });
        function Delete(Id) {
            debugger;
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                debugger;
                if (result.value) {
                    $.ajax({
                        "url": "/Roles/Remove/",
                        "datatype": "json",
                        "data": { Id: Id }
                    }).then((result) => {
                        debugger;
                        if (result.data[0] != 0) {
                            Swal.fire(
                                'Success!',
                                'Your file has been deleted.',
                                'success')
                        }
                        else {
                            Swal.fire(
                                'Failed!',
                                'Your Data Not Deleted',
                                'failed'
                            )
                        }
                        $("#myModal").modal('hide');
                        })
                    location.reload();
                }
            })
        }
        function Edit(Id) {
            var role = new Object();
            role.Id = $("#RoleIdText").val();
            role.Name = $("#RoleNameText").val();
            $.ajax({
                "url": "/Roles/Update/",
                "type": "POST",
                "dataType": "json",
                "data": { Id: role.Id, Name: role.Name }
            }).then((result) => {
                if (result.data[0] != 0) {
                    Swal.fire(
                        'success!',
                        'Your file has been Updated.',
                        'success')
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file has not Updated.',
                        'Failed'
                    )
                }
                $("#myModal").modal("hide");
                location.reload();
            })
        }
        function Save() {
            debugger
            var role = new Object();
            role.Name = $("#RoleNameText").val();
            $.ajax({
                "url": "/Roles/Create/",
                "type": "POST",
                "dataType": "json",
                "data": role
            }).then((result) => {
                debugger
                if (result > 0) {
                    Swal.fire(
                        'success!',
                        'Your file has been inserted.',
                        'success'
                    )
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file has not inserted.',
                        'Failed'
                        )
                }
                $("#myModal").modal("hide");
                location.reload();
            })
        }
        function ClearScreen() {
            document.getElementById("RoleIdText").disabled = true;
            $("#RoleNameText").val('');
            $("#Update").hide();
        }
        function Validation() {
            if ($("#RoleNameText").val() == "" || $("#RoleNameText").val == " ") {
                Swal.fire('any fool can use a computer');
            }
            else if ($("#RoleIdText").val() == "" || $("#RoleIdText").val == " ") {
                Save();
            }
            else {
                Edit($("#RoleIdText").val());
            }
        }
    </script>
}
