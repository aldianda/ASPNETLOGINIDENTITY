
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<hr />
<button class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="ClearScreen();">Create New</button>
<hr />
<table id="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Role Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id">Id</label>
                    <input type="text" id="RoleIdText" class="form-control" placeholder="Id" />
                </div>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" id="roleNameText" class="form-control" placeholder="Name">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Validation();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="Validation();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script>
        $(document).ready(function () {
            $("#table").DataTable({
                "ajax": {
                    "url": "/Roles/GetDataRoles",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "Name" },
                    {
                        "render": function (data, type, row, meta) {
                            return "<button class='btn btn-warning' onclick=GetById('" + row.Id + "');>edit</button>";
                        }
                    },
                    {
                        "render": function (data, type, row) {
                            return "<button class='btn btn-danger' onclick=Delete('" + row.Id + "');>Delete</button>";
                        }
                    }
                ]
            });
        });
        function Delete(Id) {
            debugger;
            window.alert(Id);
        }
        function Edit(Id) {

        }
        function Save() {
            debugger
            var role = new Object();
            role.Name = $("#roleNameText").val();
            $.ajax({
                "url": "/Roles/Create",
                "type": "POST",
                "dataType": "json",
                "data": role
            }).then((result) => {
                debugger
                if (result > 0) {
                    Swal.fire(
                        'success!',
